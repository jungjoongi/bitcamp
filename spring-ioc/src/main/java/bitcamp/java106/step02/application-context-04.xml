<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    
    <!-- 빈 생성 정책
         => singleton : 한 개의 객체만 생성
         => prototype : getBean() 호출할 때 마다 생성
         => request : (웹) 요청이 들어올 때 마다 생성 
         => session : (웹) 세션이 생성될 때마다 생성
    -->
    
    <!-- scope 속성의 기본 값은 singleton -->
    <bean class="bitcamp.java106.step02.Car"/>
    <bean class="bitcamp.java106.step02.Car"/>
    <bean class="bitcamp.java106.step02.Car"/>
    <bean class="bitcamp.java106.step02.Car"/>

    <bean class="bitcamp.java106.step02.Engine"/>
    <bean class="bitcamp.java106.step02.Engine"/>
    <bean class="bitcamp.java106.step02.Engine"/>
    <bean class="bitcamp.java106.step02.Engine"/>
</beans>







